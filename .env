# Veritabanı ayarları
DB_HOST=localhost
DB_NAME=kilibik_erkekler
DB_USER=your_db_user
DB_PASS=your_secure_password
DB_CHARSET=utf8mb4

# Uygulama ayarları
APP_ENV=production
APP_DEBUG=false
APP_URL=https://kilibikerkekler.com
APP_NAME="Kılıbık Erkekler Platformu"
APP_TIMEZONE=Europe/Istanbul
APP_LOCALE=tr

# Mail ayarları
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@kilibikerkekler.com
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@kilibikerkekler.com
MAIL_FROM_NAME="Kılıbık Erkekler Platformu"

# Güvenlik ayarları
APP_KEY=your_32_character_random_string
SESSION_LIFETIME=120
PASSWORD_TIMEOUT=10800

# Dosya yükleme ayarları
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=/uploads

# Rate limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# Cache ayarları
CACHE_DRIVER=file
CACHE_PREFIX=kilibik_
CACHE_LIFETIME=3600

# Log ayarları
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_MAX_FILES=30

# Sosyal medya
FACEBOOK_URL=https://facebook.com/kilibikerkekler
TWITTER_URL=https://twitter.com/kilibikerkekler
INSTAGRAM_URL=https://instagram.com/kilibikerkekler

# Reklam ayarları
ADS_ENABLED=true
ADS_PROVIDER=google
ADS_CLIENT_ID=your_ads_client_id 